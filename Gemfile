# The Gemfile
# Used to specify the various
# gems necessary for this app. to work

# The source of where the gems are located
source "https://rubygems.org"

# Necessary to require sinatra
# in the application
gem 'sinatra', ">2.0"
gem 'rack', ">2.0"
gem 'rack-contrib', ">2.0"
# Used to enable active record
# that enables the possibility
# to modify the database using
# a model concept
gem "sinatra-activerecord"
# Used to various rake commands
gem "rake"
# Used by rake and active record
# to modify the postgresql database
gem "pg"
